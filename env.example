# ===========================================
# PROPFIRM PLATFORM - ENVIRONMENT VARIABLES
# ===========================================
# Copy this file to .env and fill in your values

# ===========================================
# DATABASE (PostgreSQL)
# ===========================================

# Local Development (Docker)
DATABASE_URL="postgresql://propfirm:propfirm_secret@localhost:5432/propfirm?schema=public"

# Production (Neon)
# DATABASE_URL="postgresql://user:password@ep-xxx.us-east-1.aws.neon.tech/propfirm?sslmode=require"

# Production (Supabase)
# DATABASE_URL="postgresql://postgres:password@db.xxx.supabase.co:5432/postgres"

# ===========================================
# REDIS
# ===========================================

# Local Development (Docker)
REDIS_URL="redis://localhost:6379"

# Production (Upstash)
# REDIS_URL="rediss://default:xxx@xxx.upstash.io:6379"

# ===========================================
# AUTHENTICATION
# ===========================================

# JWT Secret (generate with: openssl rand -base64 32)
JWT_SECRET="your-super-secret-jwt-key-change-in-production"

# Session duration in seconds (7 days)
SESSION_DURATION=604800

# ===========================================
# API CONFIGURATION
# ===========================================

# API Port
API_PORT=3001

# Trading Engine WebSocket Port
WS_PORT=3002

# Frontend URL (for CORS)
FRONTEND_URL="http://localhost:3000"

# ===========================================
# BINANCE (Price Feed)
# ===========================================

# Binance WebSocket endpoint
BINANCE_WS_URL="wss://stream.binance.com:9443/ws"

# Binance REST API (for initial data)
BINANCE_API_URL="https://api.binance.com"

# ===========================================
# PAYMENTS
# ===========================================

# Stripe
STRIPE_SECRET_KEY="sk_test_xxx"
STRIPE_WEBHOOK_SECRET="whsec_xxx"
STRIPE_PUBLISHABLE_KEY="pk_test_xxx"

# Coinbase Commerce
COINBASE_COMMERCE_API_KEY="xxx"
COINBASE_COMMERCE_WEBHOOK_SECRET="xxx"

# ===========================================
# EMAIL (Resend)
# ===========================================

RESEND_API_KEY="re_xxx"
EMAIL_FROM="noreply@yourpropfirm.com"

# ===========================================
# ENVIRONMENT
# ===========================================

NODE_ENV="development"

# Log level: debug, info, warn, error
LOG_LEVEL="debug"

